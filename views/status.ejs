<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tiny Url</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
    <style>
      body {
        font-family: "Work Sans", "Helvetica Neue", "Helvetica", Helvetica,
          Arial, sans-serif !important;
        font-weight: 800;
      }
      .brand-title {
        background: -webkit-linear-gradient(45deg, #09009f, #00ff95 80%);
        font-size: 2em;
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
      }

      .btn {
        font-weight: 800;
      }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand brand-title" href="../../">Tiny Url</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="#">Logout</a>
        </div>
      </div>
    </nav>
  </head>
  <body>
    <div class="container mt-5">
      <div class="container">
        <div class="row row-cols-1 row-cols-md-2">
          <div class="col-lg">
            <div class="card mb-3">
              <div class="card-body">
                <div id="plt_country"></div>
              </div>
            </div>
          </div>
          <div class="col-lg">
            <div class="card mb-3">
              <div class="card-body">
                



              </div>
            </div>
          </div>
          <div class="col-lg">
            <div class="card mb-3">
              <div class="card-body">
                <ul class="list-group list-group-flush">
                  <% data.click_history.forEach((element,index) =>{ %>
                  <li class="list-group-item"><%= element.ip %> (<%- element.timestamp %>)</li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script>
    var data = [<%- plt %>];

    var layout = {
      title: 'Click Origin'
    };

    var config = {responsive: true};

    Plotly.newPlot('plt_country', data, layout, config);
  </script>
</html>
