<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ShortUrl</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <script src="https://cdn.jsdelivr.net/npm/clipboard@2.0.6/dist/clipboard.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        font-family: "Work Sans", "Helvetica Neue", "Helvetica", Helvetica,
          Arial, sans-serif !important;
        font-weight: 800;
      }
      .brand-title {
        background: -webkit-linear-gradient(45deg, #09009f, #00ff95 80%);
        font-size: 2em;
        -webkit-text-fill-color: transparent;
        -webkit-background-clip: text;
      }

      .btn {
        font-weight: 800;
      }
    </style>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand brand-title" href="#">ShortUrl縮短網址</a>
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="#">Logout</a>
        </div>
      </div>
    </nav>
  </head>
  <body>
    <div class="container">
      <form class="mt-3 mb-3 form-inline" action="/shortUrls" method="POST">
        <div class="input-group">
          <label class="visually-hidden" for="fullUrl">Url</label>
          <input
            class="form-control"
            placeholder="URL"
            type="url"
            name="fullUrl"
            id="fullUrl"
            autofocus
            required
          />
          <button class="btn btn-success" type="submit">Shrink</button>
        </div>
      </form>
      <div class="d-none d-md-block table-responsive">
        <table class="table align-middle table-borderless table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Title</th>
              <th>Short Url</th>
              <th>Clicks</th>
              <th>Status</th>
            </tr>
          </thead>
          <tbody>
            <% shortUrls.forEach((shortUrl,index) =>{ %>
            <tr>
              <td><%= index+1 %></td>
              <td>
                <a href="<%= shortUrl.full %>"><%= shortUrl.title %></a>
              </td>
              <td>
                <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
              </td>
              <td>
                <span class="badge bg-danger"><%= shortUrl.clicks %></span>
              </td>
              <td>
                <a
                  class="btn btn-warning text-nowrap"
                  href="status/<%= shortUrl.short %>"
                  >Status</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
      <div class="d-block d-sm-block d-md-none">
        <% shortUrls.forEach((shortUrl,index) =>{ %>
        <div class="card mb-2">
          <div class="card-body">
            <h5 class="card-title"><%= index+1 %>: <%= shortUrl.title %></h5>
            <h6 class="card-subtitle mb-2 text-muted">
              Domain: <%= shortUrl.domain %>
            </h6>
            <p class="card-text mt-1 mb-1">
              <span class="badge bg-danger"
                >Clicks: <%= shortUrl.clicks %></span
              >
            </p>
            <p class="card-text">
              Full Link: <a href="<%= shortUrl.full %>"><%= shortUrl.full %></a>
            </p>
            <div class="d-flex flex-row justify-content-center">
              <button
                class="btn btn-warning flex-fill mx-1 text-nowrap"
                data-clipboard-text="https://url.strata-io.com/<%= shortUrl.short %>"
              >
                Copy shorturl
              </button>
              <a
                class="btn btn-info flex-fill mx-1 text-nowrap"
                href="status/<%= shortUrl.short %>"
                >Status</a
              >
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <script>
      let clipboard = new ClipboardJS(".btn");

      clipboard.on("success", function (e) {
        alert("Copyed to your clipboard");
      });

      // clipboard.on("error", function (e) {
      //   console.log(e);
      // });
    </script>
  </body>
</html>
